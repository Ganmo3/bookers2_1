<h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :opinion %>
      <%= f.text_area :body %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-success" %>
    </div>
  <% end %>